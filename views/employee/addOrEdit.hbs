<div class="container border mt-5 p-3 bg-secondary">
<h3>{{viewTitle}}</h3>

<form action="/employee" method="POST" class="mt-3 p-3" autocomplete="off">
    <input type="hidden" name="_id" value="{{_id}}">
    <div class="form-row">
        <label>Full Name</label>
        <input type="text" class="form-control" name="fullname" placeholder="fullName" value="{{fullname}}">
        <div class="text-danger">
            {{employee.fullNameError}}  
        </div>
    </div>

    <div class="form-row">
        <label>Email</label>
        <input type="text" class="form-control" name="email" placeholder="email" value="{{email}}">
        <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div>

    <div class="form-row">
    <div class="form-row col-md-4 ">
        <label>Mobile</label>
        <input type="text" class="form-control" name="mobile" placeholder="mobile" value="{{mobile}}">
    </div>

    <div class="form-row col-md-5 ml-5">

        <label>City</label>
        <input type="text" class="form-control" name="city" placeholder="city" value="{{city}}">
    </div>

    </div>

    <div class="form-group mt-5">
        <button type="submit" class="btn btn-info"> <i class="fa fa-database"></i>Submit</button>
    </div>

</form>

</div>